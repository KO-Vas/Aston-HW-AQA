public class Main {
    public static boolean isLeapYear(int year) {
        if (year % 4 != 0) {
            return false;
        } else if (year % 100 == 0) {
            return year % 400 == 0;
        } else {
            return true;
        }
    }

    public static void main(String[] args) {
        System.out.println(isLeapYear(2000));
  }
}

